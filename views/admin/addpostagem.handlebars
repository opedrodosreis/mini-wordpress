{{#each erros}}
<div class="alert alert-danger">{{texto}}</div>
{{else}}

{{/each}}
<h3>Nova postagem: </h3>
<div class="card">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="post">
            <label for="titulo">Título: </label>
            <input type="text" id="titulo" name="titulo" class="form-control" required>
            <label for="slug">Slug: </label>
            <input type="text" id="slug" name="slug" class="form-control" required>
            <label for="descricao">Descrição: </label>
            <input type="text" id="descricao" name="descricao" class="form-control" required>
            <label for="conteudo">Conteúdo: </label>
            <textarea id="conteudo" name="conteudo" class="form-control" required></textarea>
            <label for="categoria">Categoria: </label>
            <select id="categoria" name="categoria" class="custom-select" required>
                {{#each categorias}}
                <option value="{{_id}}">{{nome}}</option>
                {{else}}
                <option value="">Sem categoria</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-4" type="submit">Criar postagem</button>
        </form>
    </div>
</div>